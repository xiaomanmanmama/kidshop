                 var xhr=new XMLHttpRequest();
				 xhr.onreadystatechange=function(){
					 if(xhr.readyState==4&&xhr.status==200){
						 var result=xhr.responseText;
						 if(result=="1"){
							 showlist();
							 }else{
								 alert("删除失败")
								 }
							}
					}
					xhr.open("delete","/pro/v1/deleteproduct/"+$lid,true);
					xhr.send();
					}
				</script>

	</head>
<body onload="showList()">
	<div id="d1"></div>
</body>
</html>