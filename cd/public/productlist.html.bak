<!doctype html>
<html>
	<head>
		<title></title>
		<meta charset="utf-8">
		<script>
			function showList(){
				var xhr=XMLHttpRequest();
				xhr.onreadystatechange=function(){
					if(xhr.readyState==4&&xhr.status==200){
						var result=xhr.responseText;
						var arr=JSON.parse(result);
						var htmlstr+=`
						<table border="1px" width="800px">
						<tr>
							<th>商品价格</th>
							<th>商品标题</th>
							<th>商品名称</th>
							<th>参考身高</th>
							<th>颜色分类</th>
							<th>操作</th>
						</tr>
						`;
						for(i=0;i<=arr.length;i++){
							htmlstr+=`
							<tr>
								<td>${arr[i].price}</td>
								<td>${arr[i].title}</td>
								<td>${arr[i].Cname}</td>
								<td>${arr[i].size}</td>
								<td>${arr[i].color}</td>
							
							`;
							htmlstr+=`<td>
										<a href="queryproduct.html?lid=${arr[i].lid}">修改</a>
										<a href="javascript:deleteproduct(${arr[i].lid})">删除</a>
										</td>
										</tr>
									</table>
									`;
									d1.innerHTML=htmlstr;
								}
							}
					xhr.open("get","/pro/v1/productlist",true)
					xhr.send();
					}
